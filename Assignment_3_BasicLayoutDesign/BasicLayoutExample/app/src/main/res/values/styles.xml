<resources>

    <style name="parentTextView" parent="android:Widget.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="upperTextViewStyle" parent="parentTextView">

        <item name="android:textColor">@color/material_blue_grey_800</item>
        <item name="android:background">#ff0000</item>
    </style>

    <style name="middleTextViewStyle" parent="parentTextView">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/material_blue_grey_800</item>
        <item name="android:background">#00ff00</item>

    </style>

    <style name="lowerTextViewStyle" parent="parentTextView">

        <item name="android:textColor">@color/material_blue_grey_800</item>
        <item name="android:background">#0000ff</item>


    </style>

    <style name="footerTextViewStyle" parent="parentTextView">
        <item name="android:textColor">@color/material_blue_grey_800</item>
        <item name="android:background">#00ffcc</item>
    </style>


</resources>
